<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.generator.controller.MainController">
   <children>
      <!-- Header -->
      <Label text="Java File Generator" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="15.0" />
         </VBox.margin>
      </Label>
      
      <!-- Main Form -->
      <GridPane hgap="10.0" vgap="15.0">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="300.0" prefWidth="300.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="80.0" prefWidth="80.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <children>
            <!-- Output Directory -->
            <Label text="Output Directory:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="outputDirectoryField" promptText="Select output directory..." GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button fx:id="browseButton" mnemonicParsing="false" onAction="#handleBrowseDirectory" text="Browse" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            
            <!-- File Count -->
            <Label text="Number of Files:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="fileCountField" promptText="Enter number of files to generate" text="100" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <!-- File Name Pattern -->
            <Label text="File Name Pattern:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="fileNamePatternField" promptText="e.g., document_{n}.txt" text="file_{n}.txt" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <!-- File Content Template -->
            <Label text="Content Template:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextArea fx:id="contentTemplateArea" prefRowCount="3" promptText="Enter file content template (use {n} for file number)" text="This is file number {n}&#10;Generated on: {date}&#10;Content goes here..." wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </GridPane>
      
      <!-- Action Buttons -->
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="generateButton" mnemonicParsing="false" onAction="#handleGenerateFiles" prefWidth="100.0" text="Generate">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" disable="true" mnemonicParsing="false" onAction="#handleCancelGeneration" prefWidth="100.0" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <!-- Progress Section -->
      <VBox spacing="10.0">
         <children>
            <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
            <Label fx:id="statusLabel" text="Ready to generate files" textAlignment="CENTER" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
